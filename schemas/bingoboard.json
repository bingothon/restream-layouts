{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type":"object",
    "required": ["colorCounts","cells"],
    "additionalProperties": false,
    "properties": {
        "colorCounts": {
            "default": {"pink":0, "red":0, "orange":0, "brown":0, "yellow":0, "green":0, "teal":0, "blue":0, "navy":0, "purple":0},
            "$comment": "How many fields of each color are  marked on the board",
            "type":"object",
            "additionalProperties": { "type": "number" }
        },
        "cells": {
            "type": "array",
            "default": [],
            "items": {
                "type": "object",
                "required": ["name","slot","colors","rawColors","markers"],
                "additionalProperties": false,
                "properties": {
                    "name": {"type":"string"},
                    "slot": {"type":"string"},
                    "colors": {
                        "type":"array",
                        "items": {
                            "type": "string",
                            "enum": ["pink", "red", "orange", "brown", "yellow", "green", "teal", "blue", "navy", "purple"]
                        }
                    },
                    "rawColors": {"type":"string"},
                    "markers": {
                        "type": "array",
                        "default": [null,null,null,null],
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {"type": ["string", "null"]}
                    }
                }
            }
        }
    }
}
